[class^="icon-"]{
  display:inline-block;
  background-image: url(../images/{{{spritesheet.escaped_image}}});
}

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  [class^="icon-"]{
      background-image: url(../images/{{{retina_spritesheet.escaped_image}}});
   }
}

{{#sprites}}
.icon-{{name}}{
  background-position: {{px.offset_x}} {{px.offset_y}};
  width: {{px.width}};
  height: {{px.height}};
  background-size: {{px.total_width}} {{px.total_height}};
}
{{/sprites}}

